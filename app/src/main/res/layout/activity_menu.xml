<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#9683F5"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/txtBienvenida"
        android:text="Bienvenido User"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Botones del menú -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAltaSocio"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:text="Alta Socio"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_menu_button"
        app:backgroundTint="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAltaNoSocio"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:text="Alta No Socio"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_menu_button"
        app:backgroundTint="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPagoCuota"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:text="Pago Cuota"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_menu_button"
        app:backgroundTint="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInscribirActividad"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:text="Inscribir a Actividad"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_menu_button"
        app:backgroundTint="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerClientes"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:text="Ver Clientes a cobrar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_menu_button"
        app:backgroundTint="@null" />

    <!-- Botón salir -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalir"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Salir"
            android:textColor="#FFFFFF"
            app:iconTint="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="start"
            android:padding="4dp" />
    </LinearLayout>

</LinearLayout>

